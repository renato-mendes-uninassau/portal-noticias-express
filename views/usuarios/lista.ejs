<%- include('../partials/admin_header', { titulo: titulo }) %>

<section>
  <h1><%= titulo %></h1>
  <p><a href="/admin/usuarios/nova" class="btn">Novo usuário</a></p>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Perfil</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.nome %></td>
        <td><%= u.email %></td>
        <td><%= u.perfil %></td>
        <td>
          <form
            action="/admin/usuarios/deletar/<%= u.id %>"
            method="post"
            style="display: inline"
          >
            <button type="submit" onclick="return confirm('Remover usuário?')">
              Remover
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/admin_footer') %>
