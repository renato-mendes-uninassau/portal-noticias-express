<%- include('../partials/admin_header', { titulo: titulo }) %>

<section>
  <h1><%= titulo %></h1>
  <p><a href="/admin/categorias/nova" class="btn">Nova categoria</a></p>
  <ul>
    <% categorias.forEach(c => { %>
    <li>
      <%= c.nome %>
      <form
        action="/admin/categorias/deletar/<%= c.id %>"
        method="post"
        style="display: inline"
      >
        <button type="submit" onclick="return confirm('Remover?')">
          Remover
        </button>
      </form>
    </li>
    <% }) %>
  </ul>
</section>

<%- include('../partials/admin_footer') %>
